<!DOCTYPE HTML>
<html>
<body>
<h1>Author: <%= ejsAuthor.first_name %> <%= ejsAuthor.last_name %></h1>
<div>
	<h2>Articles by Author:</h2>
  <ul>
  	<% ejsAuthor.Articles.forEach(function(article) {  %>
  	<li><a href="/articles/<%= article.id  %>"><%= article.title  %></a></li>
  	<% });  %>
  </ul>
</div>

<br><br>
<a href="/authors">Back to All Authors</a>
<br><br>
<a href="/articles">Back to the Articles Page</a>
<br><br>
<a href="/">Back to the Main Page</a>
</body>
</html>

